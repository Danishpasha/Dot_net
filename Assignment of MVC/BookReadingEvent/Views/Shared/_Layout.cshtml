
<!DOCTYPE html>
<html>
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .nav > li > a {
            position: relative;
            display: block;
            padding: 10px 15px;
            
            
        }

        .container {
            padding-top: 15px;
            padding-bottom: 0px;
        }

        .navbar-inverse .navbar-brand {
            
            font-weight: bold;
            color:indianred;

            
        }

        .navbar-nav {
            font-weight: bold;
            font-family:cursive;
        }

        .pull-right {
            font-weight: bold;
        }
        body{
            font-family:cursive;
        }
        

        .navbar-inverse {
            background-color: black;
        }
        
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="background-color:black; font-family:cursive">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Book Reading Event Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="padding-right:5px">
                <ul class="nav navbar-nav room">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Users", "Index", "Users")</li>
                    <li>@Html.ActionLink("MyEvents", "Index", "Events")</li>
                    
                    





                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Invites", "Index", "Invites")</li>

                        <li>@Html.ActionLink("Comments", "Index", "Comments")</li>
                    }

                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>


                <ul class="nav navbar pull-right" style="color:white; display:inline-flex">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <h4 style="color:white; font-weight:bold">Hello @User.Identity.Name <br /></h4>

                       <li style="display:grid">@Html.ActionLink("Logout", "Logout", "Register")</li>
                    }

                    else
                    {
                        <h5> </h5>

                        <li>@Html.ActionLink("Login", "Login", "Register")</li>
                        <li>@Html.ActionLink("Register", "Create", "Users")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="footer-P">&copy; @DateTime.Now.Year - Book Reading Event Management</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>